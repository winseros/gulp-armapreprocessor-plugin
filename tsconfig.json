{
    "compileOnSave": false,
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": "./src",
        "incremental": true,
        "lib": [
            "es2018"
        ],
        "module": "CommonJS",
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "noErrorTruncation": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "rootDir": "./src",
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "target": "es2018",
        "tsBuildInfoFile": ".buildcache/tsbuildinfo"
    },
    "include": [
        "./src/**/*.ts"
    ]
}
